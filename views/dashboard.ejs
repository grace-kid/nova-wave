<%- include('header') %>
<header id="header-sectionww" class="shadow-md">
  <div class="flex justify-between items-center w-full p-4">
    <!-- Logo Section -->
    <img src="./uploads/logo/logo.png" class="w-64" alt="NovaWave Ltd" />

    <!-- Logout Section -->

    <button
      class="bg-blue-800 text-white py-2 px-4 rounded hover:bg-blue-700 transition duration-300"
      onclick="clearClientSideData()"
    >
      Logout
    </button>
  </div>
</header>

<section class="py-6">
  <!-- Dashboard Title Section -->
  <div class="bg-violet-700 py-4 text-center">
    <h1 class="font-extrabold text-2xl text-white">DASHBOARD</h1>
    <p class="text-white mt-2">
      Welcome, <span class="font-semibold"><%= user.username %></span>
    </p>
  </div>

  <!-- Dashboard Main Section -->
  <section class="flex justify-center items-center mt-6">
    <div class="w-full max-w-5xl mx-auto p-4 rounded-lg shadow-lg">
      <!-- Welcome Message Section -->
      <div
        class="bg-purple-600 rounded-lg shadow-lg p-6 mb-8 text-white text-center"
      >
        <p class="text-xl mb-4">
          Welcome back, <span class="font-bold"><%= user.username %></span>
        </p>
        <p class="text-sm mb-6">What would you like to do today?</p>
        <div class="flex justify-center space-x-6">
          <button
            class="text-white font-semibold buttonDot py-2 px-6 bg-purple-700 rounded-lg hover:bg-purple-800 transition duration-300"
          >
            <a href="/deposit">Deposit</a>
          </button>
          <button
            class="text-white font-semibold py-2 px-6 bg-purple-700 rounded-lg hover:bg-purple-800 transition duration-300"
          >
            <a href="/withdraw">Withdraw</a>
          </button>
          <button
            class="text-white md:block hidden font-semibold py-2 px-6 bg-purple-700 rounded-lg hover:bg-purple-800 transition duration-300"
          >
            <a href="/history">History</a>
          </button>
        </div>
      </div>

      <!-- Dashboard Stats -->
      <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-4 gap-6">
        <!-- Balance Section -->
        <div
          class="bg-purple-600 p-2 py-4 overflow-x-scroll rounded-lg shadow-lg flex items-center justify-between text-white"
        >
          <div class="items-center">
            <div class="flex">
              <i class="fa-solid fa-wallet text-2xl mr-2"></i>
              <p class="text-sm uppercase">Balance</p>
            </div>
            <p class="text-2xl font-bold">$<%= user.balance %></p>
          </div>
        </div>

        <!-- Profit Section -->
        <div
          class="bg-purple-600 p-2 py-4 overflow-x-scroll rounded-lg shadow-lg flex items-center justify-between text-white"
        >
          <div class="items-center">
            <div class="flex">
              <i class="fa-solid fa-money-bill-trend-up text-2xl mr-2"></i>
              <p class="text-sm uppercase">Profit</p>
            </div>
            <p class="text-2xl font-bold">%<%= user.total_interest %></p>
          </div>
        </div>

        <!-- Active Deposit Section -->
        <div
          class="bg-purple-600 p-2 py-4 overflow-x-scroll rounded-lg shadow-lg flex items-center justify-between text-white"
        >
          <div class="items-center">
            <div class="flex">
              <i class="fa-solid fa-money-bill-transfer text-2xl mr-2"></i>
              <p class="text-sm uppercase">Total Deposit</p>
            </div>
            <p class="text-2xl font-bold">$<%= user.active_deposit %></p>
          </div>
        </div>

        <!-- Withdrawn Section -->
        <div
          class="bg-purple-600 p-2 py-4 overflow-x-scroll rounded-lg shadow-lg flex items-center justify-between text-white"
        >
          <div class="items-center">
            <div class="flex">
              <i class="fa-solid fa-hand-holding-dollar text-2xl mr-2"></i>
              <p class="text-sm uppercase">Total Withdrawn</p>
            </div>
            <p class="text-2xl font-bold">$<%= user.withdrawn %></p>
          </div>
        </div>
      </div>
      <div
        class="bg-purple-600 md:hidden my-4 p-6 rounded-lg shadow-lg flex items-center justify-between text-white"
      >
        <div class="flex items-center">
          <button
            class="text-white font-semibold py-2 px-6 bg-purple-700 rounded-lg hover:bg-purple-800 transition duration-300"
          >
            <a href="/history">History</a>
          </button>
        </div>
      </div>
      <!-- Referral Section -->
      <section id="rp" class="bg-purple-600 p-6 rounded-lg shadow-lg mt-8">
        <h3 class="text-xl font-bold text-white mb-4">Your Referral Link</h3>
        <div class="flex items-center space-x-4">
          <i class="fa-solid fa-timeline text-2xl text-white"></i>
          <span class="text-sm text-white">Invite members and earn more</span>
        </div>
        <div class="mt-4">
          <input
            type="text"
            id="referralLink"
            value="<%= referralCode %>"
            readonly
            class="w-full p-4 border-2 border-gray-600 rounded bg-purple-700 text-white"
          />
          <button
            onclick="copyReferralLink()"
            class="mt-4 w-full bg-blue-800 text-white py-2 px-4 rounded hover:bg-blue-700 transition duration-300"
          >
            Copy Referral Link
          </button>
          <button
            id="shareLinkButton"
            onclick="shareLinkButton()"
            class="mt-4 w-full bg-blue-800 text-white py-2 px-4 rounded hover:bg-blue-700 transition duration-300"
          >
            Share Referral Link
          </button>
        </div>
      </section>
    </div>
  </section>
</section>

<!-- Additional Footer or Charts (if necessary) -->
<%- include('chart') %> <%- include('footer') %>
